generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String             @id @default(uuid())
  email                   String             @unique
  name                    String?
  image                   String?
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  refreshToken            String?            @unique
  refreshTokenExpiresAt   DateTime?
  aiCredits               Int                @default(3)
  cachedInsights          Json?
  defaultNotifyBefore     Int                @default(15)
  deleteAccountCode       String?
  deleteAccountCodeExpiry DateTime?
  lastAiReset             DateTime           @default(now())
  lastInsightsDate        DateTime?
  notificationsEnabled    Boolean            @default(true)
  purchasedAiCredits      Int                @default(0)
  events                  Event[]
  goals                   Goal[]
  notifications           Notification[]
  pushSubscriptions       PushSubscription[]
  transactions            Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  reference String   @unique
  amount    Int
  credits   Int
  status    String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Event {
  id                 String   @id @default(uuid())
  title              String
  description        String?
  startTime          DateTime
  endTime            DateTime
  isCompleted        Boolean  @default(false)
  skippedReason      String?
  skippedIsImportant Boolean  @default(false)
  isSpecial          Boolean  @default(false)
  userId             String
  notifyBefore       Int      @default(15)
  focusDuration     Int      @default(25)
  user               User     @relation(fields: [userId], references: [id])
}

model Goal {
  id          String   @id @default(uuid())
  title       String
  description String?
  totalDays   Int
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  steps       Step[]
}

model Step {
  id          String    @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  isCompleted Boolean   @default(false)
  goalId      String
  completedAt DateTime?
  goal        Goal      @relation(fields: [goalId], references: [id])
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  auth      String
  p256dh    String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  timestamp DateTime @default(now())
  isRead    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}
